{
  "JwtSettings": {
    "SecretKey": "your_secret_key_here_1234",  // JWT token'ı imzalamak için kullanılan gizli anahtar
    "Issuer": "YourAppName",                  // Token'ı üreten uygulama
    "Audience": "YourAppAudience",            // Token'ı kullanan hedef grup
    "ExpirationMinutes": 60                   // Token geçerlilik süresi (dakika cinsinden)
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=YuGiOhStoreDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}